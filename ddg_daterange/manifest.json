{
    "manifest_version": 2,
    "name": "DuckDuckGo Date Range",
    "version": "1.0",
    
    "description": "Adds a daterange selector '&df=y' (past year) to DuckDuckGo search requests",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://duckduckgo.com/*"
        
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action":{
        "default_icon": "icon.png"
    }

}
